<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--按下时的状态-->
    <item android:state_pressed="true">
        <shape >
            <solid android:color="@color/main_color"/>
            <!-- 矩形的圆角弧度 -->
            <corners android:radius="180dp" />
            <padding
                android:left="15dp"
                android:right="15dp"
                android:top="5dp"
                android:bottom="5dp"
                />
        </shape>
    </item>
    <!--正常状态-->
    <item android:state_pressed="false">
        <shape >
            <solid android:color="@color/white"/>
            <corners android:radius="180dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/main_color" />
            <padding
                android:left="15dp"
                android:right="15dp"
                android:top="5dp"
                android:bottom="5dp"
                />
        </shape>
    </item>
    <!--选中状态-->
    <item android:state_selected="true">
        <shape >
            <solid android:color="@color/white"/>
            <corners android:radius="180dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/orange" />
            <padding
                android:left="15dp"
                android:right="15dp"
                android:top="5dp"
                android:bottom="5dp"
                />
        </shape>
    </item>
</selector>